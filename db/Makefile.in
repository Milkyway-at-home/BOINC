VERSION = 1

MYSQL_DIR = /usr/local/mysql/include

CFLAGS = -g -Wall @DEFS@ \
    -DHOSTTYPE=\"@host@\" \
    -DVERSION=$(VERSION) \
    -I $(MYSQL_DIR) \
    -pedantic

CC = @CC@ $(CFLAGS)

LIBS = ../api/api.o

CLIBS = @LIBS@

.C.o:
	$(CC) -c -o $*.o $<

all: db_mysql.o mysql_util.o

clean:
	rm -f dependencies *.o

dependencies: *.C
	$(CC) -M *.C > dependencies

include dependencies

