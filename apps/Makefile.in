VERSION = 1

CFLAGS = -g -Wall @DEFS@ \
    -DHOSTTYPE=\"@host@\" \
    -DVERSION=$(VERSION)

CC = @CC@ $(CFLAGS) -I ../api

LIBS = ../api/api.o

CLIBS = @LIBS@

APPS = upper_case concat uc_slow 1sec

.C.o:
	$(CC) -c -o $*.o $<
.c.o:
	$(CC) -c -o $*.o $<

all: $(APPS)

upper_case: upper_case.o
	$(CC) upper_case.o $(LIBS) -o upper_case

concat: concat.o
	$(CC) concat.o $(LIBS) -o concat

uc_slow: uc_slow.o
	$(CC) uc_slow.o $(LIBS) -o uc_slow

1sec: 1sec.o
	$(CC) 1sec.o $(LIBS) -o 1sec

clean:
	rm -f *.o $(APPS)

dependencies: *.C
	$(CC) -M *.C > dependencies

include dependencies

